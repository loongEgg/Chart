<Window
    x:Class="LoongEgg.Chart.App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:LoongEgg.Chart;assembly=LoongEgg.Chart"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LoongEgg.Chart.App"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1200"
    Height="450"
    mc:Ignorable="d">
    <Grid d:DataContext="{x:Static local:MainViewModel.DesignInstance}">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <c:TimerChart
            x:Name="chart1"
            Grid.Row="0"
            SignalGroup="{Binding SignalGroup_1}" />
        <c:TimerChart
            x:Name="chart2"
            Grid.Row="1"
            SignalGroup="{Binding SignalGroup_2}" />
        <c:TimerChart
            x:Name="chart3"
            Grid.Row="2"
            SignalGroup="{Binding SignalGroup_3}" />

    </Grid>
</Window>
