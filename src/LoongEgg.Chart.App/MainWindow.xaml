<Window
    x:Class="LoongEgg.Chart.App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:LoongEgg.Chart;assembly=LoongEgg.Chart"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LoongEgg.Chart.App"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <c:Chart>
            <c:GridLines />
            <c:AxisLines
                Gap="-10"
                StrokeThickness="3"
                Length="20"
                Placement="Bottom" />
            <c:AxisLines Placement="Top" />
            <c:AxisLines Placement="Left" />
            <c:AxisLines Placement="Right" />
        </c:Chart>
    </Grid>
</Window>
